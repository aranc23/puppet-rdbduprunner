# generated by puppet for <%= @hostname -%>

<BackupDestination backup>
  Path <%= @destination %>
  Type rsync
</BackupDestination>

<% @paths.keys.each do |p| -%>
<BackupSet <%= ['backup',@host,p].join('_').gsub('/','') -%>>
  Host <%= @host %>
  BackupDestination backup
  Path <%= p %>
<% if @paths[p] -%>
<% @paths[p].each do |e| -%>
  Exclude <%= e %>
<% end -%>
<% end -%>
<% if @disabled == 'true' -%>
  Disabled <%= @disabled %>
<% end -%>
<% if @prerun -%>
  PreRun <%= @prerun %>
<% end -%>
<% if @postrun -%>
  PostRun <%= @postrun %>
<% end -%>
<% if @priority -%>
  Priority <%= @priority %>
<% end -%>
</BackupSet>
<% end -%>
